---
import settings from '../settings/global.json';

import prefabs from 'prefabs/index.js';
---

<div class='cookie-consent-popup hidden srfc-03db px-6 py-2 txt-150 f-center'>
  <p data-nosnippet class='fs-xs mt-1.5 mb-2 mx-auto'>
    {settings.websiteName} uses cookies to provide a high quality user experience
    and gather anonymized data for statistical analysis of the website's traffic.
    You can learn more by reading our <a href='/cookies'>cookie policy</a>. <br
    /> By clicking <strong>Accept</strong> you accept their installation.
  </p>
  <div class='cookie-consent-buttons mx-auto mt-3.5 mb-2 flex j-center'>
    <button
      id='cookie-consent-accept'
      class={`${prefabs.simpleButton} ${prefabs.actionButton} fs-xs`}
      data-nosnippet>Accept</button
    >
    <button
      id='cookie-consent-decline'
      class={`${prefabs.simpleButton} ${prefabs.actionButton} fs-xs`}
      data-nosnippet>Decline</button
    >
  </div>
</div>
<script src='./CookieConsent.js'></script>
